<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Leaderboard - Arrowfall</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body class="leaderboard-page">
  <div class="leaderboard-container">
    <h1 class="title">Leaderboard</h1>
    
    <% if (typeof error !== 'undefined' && error) { %>
      <div class="error-message">
        <p>Error loading leaderboard: <%= error %></p>
      </div>
    <% } %>

    <% if (matches && matches.length > 0) { %>
      <table class="leaderboard-table">
        <thead>
          <tr>
            <th>Date</th>
            <th>Winner</th>
            <th>Loser</th>
            <th>Winner KOs</th>
            <th>Loser KOs</th>
            <th>Rounds</th>
          </tr>
        </thead>
        <tbody>
          <% matches.forEach(match => { %>
            <tr>
              <td><%= new Date(match.created_at).toLocaleString() %></td>
              <td class="winner-name"><strong><%= match.winner %></strong></td>
              <td><%= match.loser %></td>
              <td><%= match.winner_kos %></td>
              <td><%= match.loser_kos %></td>
              <td><%= match.rounds_to_win %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } else { %>
      <div class="no-matches">
        <p>No matches recorded yet. Be the first to play!</p>
      </div>
    <% } %>

    <div class="actions">
      <a href="/" class="btn btn-primary">Back to Home</a>
      <a href="/index.html" class="btn btn-secondary">Play Game</a>
    </div>
  </div>
</body>
</html>

